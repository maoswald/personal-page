{
  "name": "aurora-dark-site",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "npm run build:css && hugo --minify",
    "dev": "npm-run-all --parallel watch:css serve",
    "serve": "hugo server --bind 0.0.0.0 --disableFastRender",
    "build:css": "sass --no-source-map themes/aurora-dark/assets/scss/main.scss themes/aurora-dark/assets/css/main.css",
    "watch:css": "sass --no-source-map --watch themes/aurora-dark/assets/scss/main.scss:themes/aurora-dark/assets/css/main.css",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint . --ext .js,.mjs",
    "lint:css": "stylelint \"themes/aurora-dark/assets/**/*.scss\"",
    "format": "prettier --write \"**/*.{js,scss,md,json,html}\"",
    "test": "node --test \"tests/**/*.mjs\"",
    "lighthouse": "lighthouse http://localhost:1313 --config-path=tests/lighthouse.config.json"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "lighthouse": "^11.3.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.2.5",
    "stylelint": "^16.9.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.3.0",
    "postcss-scss": "^4.0.9",
    "sass": "^1.93.0",
    "npm-run-all": "^4.1.5"
  }
}